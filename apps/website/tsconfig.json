{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"noEmit": true,
		"moduleResolution": "Node",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": { "~/*": ["./src/*"], "contentlayer/generated": ["./.contentlayer/generated"] },
		"plugins": [{ "name": "next" }],
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		".next/types/**/*.ts",
		"unocss.config.ts",
		"contentlayer.config.ts",
		".contentlayer/generated"
	],
	"exclude": ["node_modules"]
}
